@{
    ViewData["Title"] = "Expenses";
}

@model List<Employee>

<div class="text-center">
    <h1 class="display-4">Employees</h1>
    <br />
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Email</th>
                <th>Occupation</th>
                <th>Edit/Delete</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach(var employee in Model)
                {
                    <tr>
                        <td>@employee.Id</td>
                        <td>@employee.Name</td>
                        <td>@employee.Email</td>
                        <td>@employee.Occupation</td>
                        <td>
                            <a asp-action="EditEmployee" asp-route-id="@employee.Id">Edit</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
